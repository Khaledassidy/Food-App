<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fastScrollEnabled="true">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

            <ImageView
            android:id="@+id/image_intro_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:srcCompat="@drawable/logo1" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:layout_marginTop="16dp"
               android:orientation="horizontal">

            <TextView
                android:id="@+id/text_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="45sp"
                android:textColor="@color/blue_grey"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ator"
                android:textSize="45sp"
                android:textColor="@color/blue_grey"
                android:textStyle="bold"/>
        </LinearLayout>

             <com.google.android.material.textfield.TextInputLayout
                 android:id="@+id/textinput_layout_login"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="32dp"
                 android:layout_marginStart="32dp"
                 android:layout_marginEnd="32dp"
                 app:boxStrokeWidth="0dp"
                 app:boxStrokeWidthFocused="0dp"
                 app:errorTextColor="@color/red"
                 app:errorEnabled="true"
                 app:hintTextColor="@color/blue_grey"
                 android:textColor="@color/blue_grey"
                 style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                 android:textColorHint="@color/blue_grey">
                 <com.google.android.material.textfield.TextInputEditText
                     android:id="@+id/textinput_email_login"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:inputType="text"
                     android:textSize="16sp"
                     android:background="@drawable/edittextbackground"
                     android:textColor="@color/blue_grey"
                     android:hint="@string/email_adress"/>
             </com.google.android.material.textfield.TextInputLayout>
<!-- app:endIconMode="password_toggle" hay bt5lek t7ot icon bel end taba3 l textinputlayout metl icon jehzen ta3t l password eno show 2aw la2 clear text w ela click lisner iza t8ayar l icon esma on  textinput_layout_login_email.addOnEndIconChangedListener();-->
             <com.google.android.material.textfield.TextInputLayout
                 android:id="@+id/textinput_layout_login1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginStart="32dp"
                 android:layout_marginEnd="32dp"
                 app:boxStrokeWidth="0dp"
                 app:boxStrokeWidthFocused="0dp"
                 app:errorTextColor="@color/red"
                 app:hintTextColor="@color/blue_grey"
                 app:errorEnabled="true"
                 android:textColor="@color/blue_grey"
                 style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                 android:textColorHint="@color/blue_grey">
                 <com.google.android.material.textfield.TextInputEditText
                     android:id="@+id/textinput_pass_login"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:inputType="textPassword"
                     android:textSize="16sp"
                     android:background="@drawable/edittextbackground"
                     android:textColor="@color/blue_grey"
                     android:hint="@string/password"/>
             </com.google.android.material.textfield.TextInputLayout>

<!--             <TextView-->
<!--                 android:id="@+id/error"-->
<!--                 android:layout_width="match_parent"-->
<!--                 android:layout_height="wrap_content"-->
<!--                 android:text="erro"-->
<!--                 android:layout_marginTop="5dp"-->
<!--                 android:layout_marginStart="32dp"-->
<!--                 android:layout_marginEnd="32dp"-->
<!--                 android:textAlignment="center"-->
<!--                 android:visibility="invisible"-->
<!--                 android:textColor="@color/red">-->

<!--             </TextView>-->


             <TextView
                 android:id="@+id/text_forgetpassword"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/forget_password"
                 android:textColor="@color/black"
                 android:textSize="16sp"
                 android:layout_marginTop="10dp"
                 android:layout_marginEnd="32dp"
                 android:layout_marginStart="32dp"
                 android:textAlignment="center"/>

             <androidx.appcompat.widget.AppCompatButton
                 android:id="@+id/login_button"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/login"
                 android:background="@drawable/button_orange"
                 android:layout_margin="32dp"
                 style="@style/Widget.AppCompat.Button"
                 android:textColor="@color/white"
                 android:textSize="16sp"
                 android:textStyle="bold">

             </androidx.appcompat.widget.AppCompatButton>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginEnd="32dp"
                 android:layout_marginStart="32dp"
                 android:orientation="horizontal">

                 <View
                     android:id="@+id/view"
                     android:layout_width="wrap_content"
                     android:layout_height="1dp"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:background="#B2B5B9" />

                 <TextView
                     android:id="@+id/text_or"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="8dp"
                     android:textColor="@color/black"
                     android:text="OR"
                     android:textSize="18sp" />

                 <View
                     android:id="@+id/view2"
                     android:layout_width="wrap_content"
                     android:layout_height="1dp"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:background="#B2B5B9" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="32dp"
                 android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/image_facebook"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     app:srcCompat="@drawable/facebook" />

                 <ImageView
                     android:id="@+id/image_google"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     app:srcCompat="@drawable/google" />

                 <ImageView
                     android:id="@+id/image_twitter"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     app:srcCompat="@drawable/twitter" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingBottom="32dp"
                 android:orientation="horizontal">

                 <TextView
                     android:id="@+id/you_are_not_user"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="you aren't a user?"
                     android:textSize="16sp"
                     android:textColor="@color/blue_grey"/>

                 <TextView
                     android:id="@+id/text_signup"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/signup"
                     android:textColor="@color/orange"
                     android:textSize="16sp"/>
             </LinearLayout>
         </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>